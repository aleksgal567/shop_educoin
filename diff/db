if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
    var target_arr = document.querySelectorAll('.mob_section');
    var mob_header = document.querySelector('#mob-header');
    var target = target_arr[target_arr.length-1];
    window.onscroll = changeHeadBackground();
    changeHeadBackground();
}

function changeHeadBackground(){
   let domRect = target.getBoundingClientRect();
        if(domRect.top + target.clientHeight < 0 ){
            mob_header.style.backgroundColor = "#333333";
        }else{
            mob_header.style.backgroundColor = "transparent";
        }
}






























CREATE TABLE `products` (
  `id` int(5) NOT NULL,
  `deleted` int(1) NOT NULL DEFAULT 0,
  `created` datetime NOT NULL DEFAULT current_timestamp(),
  `title` varchar(64) NOT NULL,
  `description` varchar(512) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8;